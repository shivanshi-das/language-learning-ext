{
  "manifest_version": 3,
  "name": "Language Learning Ext",
  "version": "0.1.0",
  "description": "Replace a small % of words on webpages with your target language.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": { "default_popup": "popup/popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": { "service_worker": "service_worker.js" },
  "web_accessible_resources": [
    {
      "resources": ["dict/en_es.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
